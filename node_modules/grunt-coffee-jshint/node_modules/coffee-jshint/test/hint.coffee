assert = require 'assert'
hint = require("#{__dirname}/../hint").hint

goodPrograms = [
  """
"""
"""
4
"""
"""
hello = ->
hello()
"""
]

badPrograms = [
  """
imNotDefined()
"""
"""
x = neverDefined
"""
]


describe 'coffee-jshint',

  _.each goodPrograms, (program, i) ->
    it "produces no errors for good program #{i}", ->
      errors = hint program
      assert.equal errors, []

  _.each badPrograms, (program, i) ->
    it "produces errors for bad program #{i}", ->
      errors = hint program
      assert (errors.length > 0), "Expected some errors"
